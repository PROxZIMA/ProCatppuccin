<?xml version="1.0" encoding="UTF-8"?>
<SUGGESTIONS>

  <show_suggestions value="true" />
  <transparent_suggestions value="true" />
  <!--  If true, the background will be transparent  -->

  <default_text_color value="#ffffff" />
  <!--The default text color: #000000-->

  <default_bg_color value="00000000" />
  <!--The default background color: #ffffff -->

  <apps_text_color value="#9ece6a" />
  <apps_bg_color value="#00000000" />

  <alias_text_color value="#89B4FA" />
  <!--#9ece6a-->
  <alias_bg_color value="#00000000" />

  <cmd_text_color value="#ff9e64" />
  <cmd_bg_color value="#00282a36" />

  <song_text_color value="" />
  <song_bg_color value="#EEFF41" />

  <contact_text_color value="#bd93f9" />
  <contact_bg_color value="" />

  <file_text_color value="" />
  <file_bg_color value="#00000000" />

  <suggest_alias_default value="true" />
  <!-- If true, your alias will be shown when the input field is empty -->

  <suggest_appgp_default value="true" />
  <!--  If true, your app groups will be shown when the input field is empty -->

  <click_to_launch value="true" />
  <!-- If true, some suggestions will be executed as soon as you click them  -->

  <suggestions_size value="14" />

  <double_space_click_first_suggestion value="true" />
  <!-- If true, t-ui will simulate a click on the current first suggestion if you double-click the space bar -->

  <noinput_suggestions_order value="1(15)3(8)0(3)2(3)" />
  <!--The order and the number of suggestions that appears on-screen when the input field is empty. 0=apps, 1=alias, 2=cmds, 3=app groups. Put between round brackets the maximum number of suggestions of the leading type-->

  <suggestions_order value="2(2)1(3)0(5)3(3)" />
  <!-- Like above but: the order and the number of suggestions that appears on-screen. -->

  <noinput_min_command_priority value="5" />
  <!-- The minimum priority of a command shown when the input field is empty-->

  <suggestions_per_category value="10" />
  <!-- The number of suggestions shown per category. This doesn't affect "noinput_suggestions_order" and "suggestions_order"-->

  <suggestions_deadline value="0.45" />
  <!-- The min/max rank that a suggestion needs to get in order to be shown. min/max depends on the comparison algorithm -->

  <suggestions_algorithm value="13" />
  <!-- The algorithm used to compare strings: 13 is JAROWRINKLER (Normalized similarity)
https://github.com/fAndreuzzi/TUI-ConsoleLauncher/wiki/CompareString2 -->

  <suggestions_quickcompare_n value="3" />

  <hide_suggestions_when_empty value="false" />
  <!-- If "always" the suggestion area will be hidden when there are no suggestions. If "true" it will be hidden only if also the input area is empty. "false" disables the feature-->

  <suggestions_spaces value="15,15,5,15" />
  <!-- [External horizontal margin],[E. vertical margin],[Internal horizontal margin],[I. vertical margin] -->

</SUGGESTIONS>
